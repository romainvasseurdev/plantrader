{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <p> <img src="https://placehold.it/350x200 "> </p>                </div>
                <div class="col-md-4">
                    <p> <img src="https://placehold.it/200x200 "> </p>
                    <p>Offre publiée par : {{ echange.author.username }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <h2>{{ echange.title }} TITRE DE L ANNONCE</h2>
        <div class="row">
            <div class="col-md-8">
               {{ echange.description}}
               DESCRIPTION DE L ANNONCE 
            </div>
            <div class="col-md-4">
                <table class="table table-hover">
                    <tr>
                        <td>Mis en ligne le : </td>
                        <td>{{ echange.createdAt | date('d/m/Y') }}</td>
                    </tr>
                    <tr>
                        <td>Disponible dans la ville de : </td>
                        <td>{{ echange.place }}</td>
                    </tr>
                    <tr>
                        <td>Dans la catégorie : </td>
                        <td>{{ echange.category.name }}</td>
                    </tr>
                    <tr>
                        <td>Contacter par télephone : </td>
                        <td>{{ echange.author.telephone }}</td>
                    </tr>
                    <tr>
                        <td>Contacter par mail : </td>
                        <td>{{ echange.author.email }}</td>
                    </tr>
                 </table> 
                      
            </div>
        </div>
    </div>
{% endblock %}


