{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    <div class="container">
        <h1>Inscription !</h1>
        {{ form_start(form) }}

        {{ form_row(form.email,{'label': 'Email' ,'attr':{'placeholder':"Votre email"}}) }}

        {{ form_row(form.username,{'label': 'Pseudonyme' ,'attr':{'placeholder':"Votre pseudo"}}) }}

        {{ form_row(form.password,{'label': 'Mot de passe' ,'attr':{'placeholder':"Votre mot de passe"}}) }}

        {{ form_row(form.confirm_password,{'label': 'Confirmation' ,'attr':{'placeholder':"Confirmez votre mot de passe"}}) }}

        {{ form_row(form.telephone,{'label': 'Telephone' ,'attr':{'placeholder':"Votre numéro de téléphone"}}) }}

        <button type="submit" class="btn btn-success">Je m'inscris</button>

        {{ form_end(form) }}
    </div>
{% endblock %}